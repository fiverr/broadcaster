{
  "name": "broadcaster",
  "version": "0.0.1",
  "description": "Broadcast release notes for a given deployment through mail. Persist past issues to mongodb.",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production nohup node app.js > /dev/null 2>&1 &",
    "stop": "sudo netstat -nlap | grep 7000 | head -1 | awk '{print $7}' | awk -F/ '{print \"kill -9\", $1}' | bash"
  },
  "repository": "git@github.com:fiverr/broadcaster.git",
  "keywords": [
    "release",
    "notes",
    "git",
    "git",
    "notes",
    "express"
  ],
  "author": "Avner Cohen",
  "license": "MIT",
  "dependencies": {
    "colors": "~0.6.1",
    "connect-assets": "2.x",
    "express": "~3.3.4",
    "jade": "0.x",
    "less": "1.x",
    "mongodb": "~1.3.12",
    "naught": "~1.1.0",
    "nodemailer": "~1.11",
    "nodemailer-direct-transport": "^1.1.0",
    "shipit-deploy": "2.2",
    "shipit-shared": "4.4.1"
  },
  "engines": {
    "node": "~0.8.x"
  }
}
